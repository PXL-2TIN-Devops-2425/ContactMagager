@page
@model ContactManager.Pages.IndexModel
<!DOCTYPE html>

<div class="container">
    <div class="header">
        <h1>Contacts</h1>
    </div>
    <div class="content">
        <table class="table table-striped table-bordered table-responsive">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>First Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Company</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var contact in Model.Contacts)
            {
                <tr>
                    <td>@contact.Name </td>
                    <td>@contact.FirstName</td>
                    <td>@contact.Email</td>
                    <td>@contact.Phone</td>
                    <td>@contact.Company?.Name</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
